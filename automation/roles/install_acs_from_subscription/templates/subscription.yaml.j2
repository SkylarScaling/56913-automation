---
apiVersion: app.k8s.io/v1beta1
kind: Application
metadata:
  name: "{{ app_name }}"
  namespace: "{{ app_namespace }}"
spec:
  componentKinds:
    - group: apps.open-cluster-management.io
      kind: Subscription
  selector:
    matchExpressions:
      - key: app
        operator: In
        values:
          - "{{ app_name }}"
---
apiVersion: apps.open-cluster-management.io/v1
kind: Channel
metadata:
  annotations:
    apps.open-cluster-management.io/reconcile-rate: medium
  name: acs-install-policies-channel
  namespace: "{{ app_namespace }}"
spec:
  type: Git
  pathname: https://github.com/skylarscaling/56913-automation-private.git
  secretRef:
    name: acm-acs-policy-git-secret
---
apiVersion: v1
kind: Secret
metadata:
  name: acm-acs-policy-git-secret
  namespace: "{{ app_namespace }}"
data:
  user: cmVwbGFjZQo=
  accessToken: cmVwbGFjZQo=
---
apiVersion: apps.open-cluster-management.io/v1
kind: Subscription
metadata:
  name: acs-install-policies-subscription
  namespace: "{{ app_namespace }}"
  annotations:
    apps.open-cluster-management.io/git-branch: main
    apps.open-cluster-management.io/git-path: acm-policies/install-acs
    apps.open-cluster-management.io/reconcile-option: replace
  labels:
    app: "{{ app_name }}"
spec:
  channel: "{{ app_namespace }}/acs-install-policies-channel"
  placement:
    placementRef:
      kind: PlacementRule
      name: acs-install-policies-placement
---
apiVersion: apps.open-cluster-management.io/v1
kind: PlacementRule
metadata:
  name: acs-install-policies-placement
  namespace: "{{ app_namespace }}"
  labels:
    app: "{{ app_name }}"
spec:
  clusterSelector:
    matchLabels:
      name: local-cluster
